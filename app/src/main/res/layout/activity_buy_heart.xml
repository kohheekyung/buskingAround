<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#f9eecc"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efaa52">
    <TextView

        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="크레딧 충전하기"
        android:textSize="20dp"
        android:textColor="@color/black"></TextView>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dollar"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="크레딧 10개"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₩100"
                    />

                <ImageView
                    android:id="@+id/heart10"
                    android:layout_marginLeft="7dp"
                    android:src="@mipmap/rightarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buyHeart"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dollar"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="크레딧 50개"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₩500"
                    />

                <ImageView
                    android:id="@+id/heart50"
                    android:layout_marginLeft="7dp"
                    android:src="@mipmap/rightarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buyHeart"
                    />

            </LinearLayout>


            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dollar"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="크레딧 100개"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₩1,000"
                    />

                <ImageView
                    android:id="@+id/heart100"
                    android:layout_marginLeft="7dp"
                    android:src="@mipmap/rightarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buyHeart"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dollar"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="크레딧 500개"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₩5,000"
                    />

                <ImageView
                    android:id="@+id/heart500"
                    android:layout_marginLeft="7dp"
                    android:src="@mipmap/rightarrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="buyHeart"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:src="@mipmap/dollar" />

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="크레딧 1000개"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₩10,000"
                    />

                <ImageView
                    android:id="@+id/heart1000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:src="@mipmap/rightarrow"
                    android:onClick="buyHeart"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
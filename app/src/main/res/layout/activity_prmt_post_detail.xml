<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="finalreport.mobile.dduwcom.myapplication.ReadPost.NormPostDetailActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#efaa52">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backarrow"
            android:id="@+id/goback"
            />


        <ImageView
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/gui7"/>


    </android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <finalreport.mobile.dduwcom.myapplication.Utils.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_image"
                    android:layout_below="@id/relLayout1"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/relLayout2"
                    android:layout_below="@+id/post_image">

                    <RelativeLayout
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:id="@+id/heartLayout">

                        <!--<ImageView-->
                            <!--android:layout_width="35dp"-->
                            <!--android:layout_height="35dp"-->
                            <!--android:id="@+id/image_heart_red"-->
                            <!--android:layout_centerInParent="true"-->
                            <!--android:layout_marginLeft="20dp"-->
                            <!--android:src="@drawable/ic_heart_red"-->
                            <!--android:visibility="invisible"/>-->

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/image_heart"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="20dp"
                            android:visibility="visible"/>

                    </RelativeLayout>

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/speech_bubble"
                        android:layout_toRightOf="@+id/heartLayout"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_speech_bubble"
                        android:visibility="visible"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relLayout3"
                    android:layout_below="@+id/relLayout2"
                    android:padding="20dp"
                    android:layout_marginBottom="50dp"
                   >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/post_content"/>



                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/post_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/post_when"/>
                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/post_when"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/post_where"/>


                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_below="@+id/post_where"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="buskingAround, yun 외 2명이 좋아합니다."
                        android:textSize="18sp"
                        android:id="@+id/image_likes"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3개의 댓글"
                        android:textSize="18sp"
                        android:layout_below="@+id/image_likes"
                        android:id="@+id/image_comments_link"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3일전"
                        android:textSize="18sp"
                        android:layout_below="@+id/image_comments_link"
                        android:id="@+id/image_time_posted"
                        android:layout_marginTop="15dp"/>

                </RelativeLayout>


            </RelativeLayout>

        </ScrollView>


    </RelativeLayout>





